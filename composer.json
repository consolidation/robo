{
  "name": "consolidation/robo",
  "description": "Modern task runner",
  "license": "MIT",
  "authors": [
    {
      "name": "Davert",
      "email": "davert.php@resend.cc"
    }
  ],
  "autoload": {
    "psr-4": {
      "Robo\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Robo\\": "tests/src",
      "RoboExample\\": "examples/src"
    }
  },
  "bin": [
    "bin/robo"
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-zip": "*",
    "consolidation/annotated-command": "^4.3",
    "consolidation/config": "^1.2.1|^2.0.1",
    "consolidation/log": "^1.1.1|^2.0.2",
    "consolidation/output-formatters": "^4.1.2",
    "consolidation/self-update": "^2.0",
    "league/container": "^3.3.1",
    "symfony/console": "^4.4.19 || ^5",
    "symfony/event-dispatcher": "^4.4.19 || ^5",
    "symfony/filesystem": "^4.4.9 || ^5",
    "symfony/finder": "^4.4.9 || ^5",
    "symfony/process": "^4.4.9 || ^5",
    "tm/tooly-composer-script": "^1.4",
    "symfony/yaml": "^4.4 || ^5"
  },
  "require-dev": {
    "kint-php/kint": "^3.3",
    "natxet/cssmin": "^3",
    "patchwork/jsqueeze": "^2",
    "phpunit/phpunit": "^7.5.20 | ^8",
    "psy/psysh": "^0.10.9",
    "squizlabs/php_codesniffer": "@stable",
    "yoast/phpunit-polyfills": "^0.2.0"
  },
  "scripts": {
    "code:cs": "./robo sniff",
    "code:unit": "phpunit",
    "code:lint": "find src tests/src -name '*.php' -print0 | xargs -0 -n1 -P4 -- php -l",
    "code:test": [
      "@phar:build",
      "@code:lint",
      "@code:unit",
      "@code:cs"
    ],
    "post-install-cmd": [
      "Tooly\\ScriptHandler::installPharTools"
    ],
    "post-update-cmd": [
      "Tooly\\ScriptHandler::installPharTools"
    ],
    "phar:build": [
      "rm -Rf robo || true",
      "php -d phar.readonly=off vendor/bin/phar-composer.phar build .",
      "mv robo.phar robo",
      "chmod +x robo"
    ],
    "phar:install": [
      "rm -rf /usr/local/bin/robo || true",
      "mv ./robo /usr/local/bin/robo"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.4.0"
    }
  },
  "extra": {
    "scenarios": {
      "symfony4": {
        "require": {
          "symfony/console": "^4.4.11",
          "symfony/event-dispatcher": "^4.4.11",
          "symfony/filesystem": "^4.4.11",
          "symfony/finder": "^4.4.11",
          "symfony/process": "^4.4.11",
          "phpunit/phpunit": "^6",
          "nikic/php-parser": "^2"
        },
        "remove": [
          "codeception/phpunit-wrapper"
        ],
        "config": {
          "platform": {
            "php": "7.4.0"
          }
        }
      }
    },
    "branch-alias": {
      "dev-master": "3.x-dev",
      "dev-main": "3.x-dev"
    },
    "tools": {
      "phar-composer": {
        "url": "https://clue.engineering/phar-composer-latest.phar",
        "dev-only": true
      }
    }
  },
  "suggest": {
    "totten/lurkerlite": "For monitoring filesystem changes in taskWatch",
    "patchwork/jsqueeze": "For minifying JS files in taskMinify",
    "natxet/cssmin": "For minifying CSS files in taskMinify"
  },
  "conflict": {
    "codegyre/robo": "*"
  }
}
